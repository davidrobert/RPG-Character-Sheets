<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Padrões de Tela  -->
    <style name="ScreenBase">
        <item name="android:background">@drawable/bg2</item>
        <item name="android:padding">5dp</item>
    </style>
    
    
    <!-- Padrões de Fontes -->
    <style name="FontBase">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">@dimen/TextSize</item>
    </style>

    <style name="FontBaseBold" parent="@style/FontBase">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontBaseItalic" parent="@style/FontBase">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="FontBaseBoldItalic" parent="@style/FontBase">
        <item name="android:textStyle">bold|italic</item>
    </style>

    
</resources>